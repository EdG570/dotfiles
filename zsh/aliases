# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

alias amend="git commit --amend"
alias aliases='vim ~/dotfiles/zsh/aliases'
alias b='bundle install --path .bundle/gems --binstubs .bundle/bin'
alias bu='bundle update'
alias c='clear'
alias d='cd ~/dotfiles'
alias dr='cd ~/Dropbox'
alias drop='cd ~/Dropbox'
alias dev='cd ~/development'
alias gap='git add --all -p'
alias gca='git commit --amend --no-edit'
alias gcl='git clone'
alias gc="git commit -m"
alias gco='git checkout'
alias gb='git branch'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdm='git diff master'
alias gl="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
alias gp='git push'
alias gpf='git push -f'
alias gr='git rebase'
alias gs='git status'
alias hpush='git push heroku'
alias killruby='killall -9 ruby'
alias retag='ctags -R --exclude=.svn --exclude=.git --exclude=log --exclude=tmp *'
alias rc='rails console'
alias rdm="be rake db:migrate"
alias rc='cd ~/development/rubycasts.io'
alias sa='source ~/dotfiles/zsh/aliases'
alias sz='source ~/dotfiles/zshrc'
alias u='cd ..'
alias v='vim'
alias vi='vim'

